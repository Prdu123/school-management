@model IEnumerable<SchoolManagement.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Student</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered" id="studentsTable">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Age</th>
                <th>Class</th>
                <th>Roll Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(student.ImagePath))
                        {
                            <img src="@Url.Content("~/" + student.ImagePath)" alt="@student.Name" width="100" class="img-thumbnail" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Class</td>
                    <td>@student.RollNumber</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "language": {
                    "emptyTable": "No data available in table"
                },
                "responsive": true
            });
        });
    </script>
}
