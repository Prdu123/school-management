@model SchoolManagement.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<h2>Delete Teacher</h2>

<div>
    <h4>Are you sure you want to delete this teacher?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Age
            </dt>
            <dd class="col-sm-10">
                @Model.Age
            </dd>
            <dt class="col-sm-2">
                Sex
            </dt>
            <dd class="col-sm-10">
                @Model.Sex
            </dd>
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Url.Content("~/images/" + Model.ImagePath)" alt="@Model.Name" width="100" class="img-thumbnail" />
                }
                else
                {
                    <span>No Image</span>
                }
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
