@model SchoolManagement.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h2>Delete Subject</h2>

<div>
    <h4>Are you sure you want to delete this subject?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Class
            </dt>
            <dd class="col-sm-10">
                @Model.Class
            </dd>
            <dt class="col-sm-2">
                Languages
            </dt>
            <dd class="col-sm-10">
                @Model.Language
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
