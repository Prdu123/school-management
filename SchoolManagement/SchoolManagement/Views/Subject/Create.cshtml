@model SchoolManagement.Models.SubjectViewModel

@{
    ViewData["Title"] = "Create Subject";
}

<h2>Create Subject</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label"></label>
                <input asp-for="Class" class="form-control" />
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="TeacherIds">Select Teachers</label>
                <select asp-for="TeacherIds" asp-items="ViewBag.TeacherIds" class="form-control" multiple="multiple">
                    <option value="">-- Select Teacher --</option>

                </select>
                <span asp-validation-for="TeacherIds" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label for="StudentIds">Select Students</label>
                <select asp-for="StudentIds" asp-items="ViewBag.StudentIds" class="form-control" multiple="multiple">
                </select>
                <span asp-validation-for="StudentIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
